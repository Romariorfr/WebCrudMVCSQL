@model WebCrudMVCSQL.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Cadastrar Produto</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="border p-3 rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome do Produto" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Criar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
